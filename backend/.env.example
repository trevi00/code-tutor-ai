# Application
APP_NAME="Code Tutor AI"
APP_VERSION="1.0.0"
DEBUG=true
ENVIRONMENT=development

# Server
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/codetutor
DATABASE_ECHO=false
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://localhost:6379/0

# JWT Auth
JWT_SECRET_KEY=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173"]

# LLM (for AI Tutor)
# Provider: "openai", "ollama", or "pattern" (fallback)
LLM_PROVIDER=openai
LLM_MAX_TOKENS=512

# OpenAI Configuration (recommended)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini

# Ollama Configuration (local LLM alternative)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3
OLLAMA_TIMEOUT=60

# Legacy settings (for local model deployment)
LLM_MODEL_PATH=yanolja/EEVE-Korean-2.8B-v1.0
LLM_DEVICE=cuda

# Docker Sandbox
SANDBOX_TIMEOUT_SECONDS=5
SANDBOX_MEMORY_LIMIT_MB=256
SANDBOX_CPU_LIMIT=0.5
